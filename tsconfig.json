{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true, // Added option

    "baseUrl": "./src", // Base directory for imports
    "paths": {
      "@*": ["*"],
      "@config/*": ["config/*"],
      "@services/*": ["services/*"],
      "@components": ["ui/component"],
      "@components/*": ["ui/component/*"],
      "@api/*": ["infrastructure/api/*"],
      "@types/*": ["types/*"],
      "@dialog": ["ui/component/dialogs"],
      "@dialog/*": ["ui/component/dialogs/*"],
      "@ui/*": ["ui/*"],
      "@hooks/*": ["hooks/*"],
      "@utils": ["core/utils"],
      "@assets/*": ["assets/*"],
      "@Slice/*": ["Slice/*"], // Added @Slice path
      "@utils/*": ["core/utils/*"]
    }
  },
  "include": ["src", "coverage/staggingiframev2.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
